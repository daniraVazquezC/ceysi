<%= render layout: 'devise/shared/template' do %>
  <div class="row my-4">
    <div class="col-12 text-center">
      <h5><%= t "devise.invitations.edit.header" %></h5>
    </div>
  </div>
        

  <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :invitation_token, readonly: true %>
              
    <% if f.object.class.require_password_on_accepting %>

      <div class="form-group mb-3">
        <%= f.label :password, "Contraseña" %><br />
        <%= f.password_field :password, placeholder: "Contraseña", class:"form-control rounded-pill border-0 shadow-sm px-4 text-primary" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :password_confirmation, "Confirmar contraseña" %><br />
        <%= f.password_field :password_confirmation, placeholder: "Confirmar contraseña", class:"form-control rounded-pill border-0 shadow-sm px-4 text-primary" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Establecer contraseña", class: "btn btn-primary btn-block text-uppercase mb-2 rounded-pill shadow-sm" %>
    </div>

  <% end %>
<% end %>
