<div class="row mt-5">
  <div class="col-6">
    <%= link_to inbound_orders_path, class: "btn btn-primary" do%>
      <i class="fas fa-arrow-left"></i> Regresar
    <% end %>
  </div>
</div>

<div class="row mt-5 mb-5">

  <div class="col-xl-10">
    <div class="row">
      <div class="col-md-3">
        <p>Fecha de creación: </p>
      </div>
      <div class="col-md-9">
        <p><%= @inbound_order.created_at %></p>
      </div>
    </div>
  </div>

  <div class="col-xl-10">
    <div class="row">
      <div class="col-md-3">
        <p>Comentarios de la orden:</p>
      </div>
      <div class="col-md-9">
        <p><%= simple_format(@inbound_order.comments) %></p>
      </div>
    </div>
  </div>

</div>

<div class="row mt-5">
  <div class="col-12 text-center">
    <h4>Detalles de la orden de ingreso</h4>
  </div>
</div>

<div class="row mt-5">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Código de producto</th>
        <th scope="col">Nombre del producto</th>
        <th scope="col">Cantidad</th>
      </tr>
    </thead>
    <tbody>
      <% @transaction_details.each_with_index do |transaction_detail, number| %>
        <tr>
          <td><%= number + 1 %></td>
          <td><%= transaction_detail.product.product_code %></td>
          <td><%= transaction_detail.product.name %></td>    
          <td><%= transaction_detail.quantity %></td>  
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
