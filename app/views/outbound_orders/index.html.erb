<div class="row my-5">
  <div class="col-12 ">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb px-0">
        <li class="breadcrumb-item breadcrumb-item-green"><a href="/">Inicio</a></li>
        <li class="breadcrumb-item active" aria-current="page">Ordenes de egreso</li>
      </ol>
    </nav>
  </div>
  <div class="col-12 mb-4">
    <h3>Ordenes de egreso</h3>
  </div>
  <div class="col-12">
    <%= link_to new_outbound_order_path, class: "btn btn-primary" do%>
      <i class="fas fa-plus"></i> Registrar orden de egreso
    <% end %>
  </div>
</div>
<div class="row my-5">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col"># de orden</th>
        <th scope="col">Fecha de creaci√≥n</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @outbound_orders.each do |outbound_order| %>
        <tr>
          <td><%= outbound_order.id %></td>
          <td><%= outbound_order.created_at.to_s(:standart_format)%></td>    
          <td>
            <%= link_to outbound_order_path(outbound_order), class: "general-green" do %> 
              <i class="far fa-eye"></i> Ver detalles
            <% end %>     
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="row pagination-sm justify-content-center my-3" >
  <%= paginate @outbound_orders %>
</div>