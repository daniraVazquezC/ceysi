<div class="row mt-5">
  <div class="col-6">
    <%= link_to '<= Volver', products_path %>
  </div>
  <div class="col-6">
    <p>* Estos campos son requeridos</p>
  </div>
</div>

<div class="row mt-5">
  <%= form_for @product, html: {class: 'col-xl-8' } do |f| %>

    <div class="form-group row">
      <%= f.label :product_code, "CÃ³digo de producto", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :product_code, class: "form-control" %>
      </div>
    </div>

    <div class="form-group required row">
      <%= f.label :name, "Nombre del producto", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control", required: true%>
      </div>
    </div>

    <div class="form-group required row">
      <%= f.label :initial_stock, "Existencia inicial", class: "col-sm-2 col-form-label", value: "0" %>
      <div class="col-sm-10">
        <%# Comentario: Este campo no permite letras y se establece 0 como valor minimo, ademas permite unicamente enteros %>
        <%= f.number_field :initial_stock, class: "form-control", value: 0, min: 0, required: true, placeholder: "Este campo no puede quedar vacio, debe ser al menos 0" %>
      </div>
    </div>

    <div class="form-group required row">
      <%= f.label :price, "Precio $", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%# Comentario: Este campo no permite letras y se establece 0 como valor minimo, ademas permite 2 decimales %>
        <%= f.number_field :price, class: "form-control", value: 0.0, min: 0, step: 0.01 , required: true, placeholder: "Este campo no puede quedar vacio, debe ser al menos 0" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10">
        <%= submit_tag "Crear producto", class: "btn btn-primary"  %>
      </div>
    </div>

  <% end %>
</div>






