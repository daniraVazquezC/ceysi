<div class="row mt-5">
  <div class="col-6">
    <i class="fas fa-arrow-left"></i>
    <%= link_to 'Regresar al listado de productos', products_path %>
  </div>
</div>

<div class="row mt-5">
  <h2><%= @product.name %></h2>
</div>

<div class="row mt-5 mb-5">
  <div class="col-xl-10">
    <div class="row">
      <div class="col-md-3">
        <p>CÃ³digo de producto: </p>
      </div>
      <div class="col-md-9">
        <p><%= @product.product_code %></p>
      </div>
    </div>
    
  </div>

  <div class="col-xl-10">
    <div class="row">
      <div class="col-md-3">
        <p>Existencias: </p>
      </div>
      <div class="col-md-9">
        <p><%= @product.stock %></p>
      </div>
    </div>
  </div>

  <div class="col-xl-10">
    <div class="row">
      <div class="col-md-3">
        <p>Precio: </p>
      </div>
      <div class="col-md-9">
        <p>$<%= @product.price %></p>
      </div>
    </div>
  </div>

  <div class="col-xl-10">
    <div class="row">
      <div class="col-md-12">
        <% if @product.with_minimum_stock %>
          <p>Con un minimo de existencias de <%= @product.minimum_stock %> piezas</p>
        <% else %>
          <p>Sin un minimo de piezas en existencia establecido</p>
        <% end%>
      </div>
    </div>
  </div>

</div>

<div class="row mt-5">
  <fieldset class="col-6 scheduler-border">
      <legend class="scheduler-border">Acciones para este producto</legend>
      <div class="col-12">
        <%= link_to 'Editar producto', edit_product_path(@product), class:"btn btn-primary px-5"%> 
      </div>
      <div class="col-12 mt-3 ">
        <button class="btn btn-info">Realizar ajuste de cantidades</button>
      </div>
      <div class="col-12 mt-3 ">
        <%= link_to 'Eliminar producto', @product, method: :delete, data: { confirm: 'Are you sure?' } , class:"mt-3 btn btn-danger px-5"%>
      </div>
  </fieldset>
</div>


