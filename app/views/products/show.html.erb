<div class="row mt-5">
  <div class="col-6">
    <%= link_to products_path, class: "btn btn-primary" do%>
      <i class="fas fa-arrow-left"></i> Regresar al listado de productos
    <% end %>
  </div>
</div>

<div class="row">
  <% if @product.product_image.attached?%>
    <div class="col-lg-3 col-xl-4 mt-5">
      <%= image_tag(url_for(@product.product_image), class: "img-fluid") %>
    </div>
  <% end %>    
  <div class="col-lg-9 col-xl-8">
    <div class="row mt-5 mb-5">
      
      <div class="col-xl-12 mb-2">
        <div class="row">
          <div class="col-md-12">
            <h4><%= @product.name %></h4>
          </div>
        </div> 
      </div>

      <div class="col-xl-12">
        <div class="row">
          <div class="col-md-3">
            <p>Código de producto: </p>
          </div>
          <div class="col-md-9">
            <p><%= @product.product_code %></p>
          </div>
        </div> 
      </div>

      <div class="col-xl-12">
        <div class="row">
          <div class="col-md-3">
            <p>Existencias: </p>
          </div>
          <div class="col-md-9">
            <p><%= @product.stock %></p>
          </div>
        </div>
      </div>

      <div class="col-xl-12">
        <div class="row">
          <div class="col-md-3">
            <p>Precio: </p>
          </div>
          <div class="col-md-9">
            <p>$<%= @product.price %></p>
          </div>
        </div>
      </div>

      <div class="col-xl-12">
        <div class="row">
          <div class="col-md-3">
            <p>Descripción: </p>
          </div>
          <div class="col-md-9">
            <p><%= simple_format(@product.description) %></p>
          </div>
        </div>
      </div>

      <div class="col-xl-12">
        <div class="row">
          <div class="col-md-12">
            <% if @product.with_minimum_stock %>
              <p>Con un minimo de existencias de <%= @product.minimum_stock %> piezas</p>
            <% else %>
              <p>Sin un minimo de piezas en existencia establecido</p>
            <% end%>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>




<div class="row mt-5">
  <fieldset class="col-12 scheduler-border">
    <legend class="scheduler-border">Acciones para este producto</legend>
    <div class="col-12">
      <%= link_to 'Editar producto', edit_product_path(@product), class:"btn btn-primary px-5 mt-1"%> 

      <%= link_to 'Ver transacciones del producto', show_transactions_path(@product), class:"btn btn-primary px-5 mt-1"%> 

      <button class="btn btn-info quantity-adjustment mt-1">Realizar ajuste de cantidades</button>
    </div>
    <% if @product.transaction_details.count == 0 %>
      <div class="col-12 mt-3 ">
        <%= link_to 'Eliminar producto', @product, method: :delete, data: { confirm: 'Are you sure?' } , class:"mt-3 btn btn-danger px-5"%>
      </div>
    <% end %>
  </fieldset>
</div>

<%= render "quantity_adjustment" %>