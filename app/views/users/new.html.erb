<div class="row mt-5">
  <div class="col-6">
    <%= link_to 'Back', users_path %>
  </div>
  <div class="col-6">
    <p>* Estos campos son requeridos</p>
  </div>
</div>

<div class="row mt-3"> 
  <%= form_for @user, html: {class: 'col-xl-8' } do |f| %>
    <div class="form-group row">
      <%= f.label :name, "Nombre", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group required row">
      <%= f.label :email, "Correo electrónico", class: "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= f.email_field :email, class: "form-control", required: true%>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :role, "Tipo de usuario", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%# Comentario: se colocan en el select los roles que puede tener un usuario %> 
        <%= f.select :role, options_for_select([["Usuario", "usuario"],["Administrador", "administrador"]]),{}, {class: "form-control"} %>
      </div>
    </div>  

    <div class="form-group row">
      <div class="col-sm-10">
        <%= submit_tag "Enviar invitación", class: "btn btn-primary"  %>
      </div>
    </div>
    <% end %>
</div>




