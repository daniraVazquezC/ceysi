<div class="row mt-5">
  <div class="col-12">
    <h2>Editar tu información de usuario</h2>
  </div>
</div>

<div class="row mt-3">
  <div class="col-6">
    <p><em class="red-text">*</em> Estos campos son requeridos</p>
  </div>
</div>

<div class="row mt-5">
  <%= form_for current_user, url: edit_profile_path, html: {class: 'col-xl-8' } do |f| %>
    <div class="form-group row">
      <%= f.label :name, "Nombre", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group required row">
      <%= f.label :email, "Correo electrónico", class: "col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= f.email_field :email, class: "form-control", required: true%>
      </div>
    </div>

    <div class="form-group row mt-5">
      <div class="col-sm-10">
        <%= submit_tag "Guardar", class: "btn btn-primary"  %>
      </div>
    </div>
    <% end %>
</div>




